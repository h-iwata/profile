{
  "name": "h-iwata-profile",
  "version": "1.0.0",
  "description": "H-iwata Developer Profile Site",
  "scripts": {
    "lint:html": "htmlhint index.html _layouts/*.html",
    "lint:scss": "stylelint \"assets/css/_*.scss\"",
    "lint": "pnpm run lint:html && pnpm run lint:scss",
    "lint:fix": "stylelint \"assets/css/_*.scss\" --fix",
    "test:gen": "tsx scripts/generate-test.ts",
    "test:watch": "tsx scripts/watch-specs.ts",
    "test:run": "tsx scripts/run-test.ts",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:debug": "playwright test --debug",
    "test:headed": "playwright test --headed",
    "test:report": "playwright show-report",
    "test:env": "echo $CLAUDE_CODE $CURSOR_IDE",
    "setup": "playwright install && tsx scripts/setup.ts"
  },
  "devDependencies": {
    "@playwright/test": "^1.54.2",
    "@types/node": "^22.17.0",
    "htmlhint": "^1.1.4",
    "playwright": "^1.54.2",
    "prettier": "^3.3.3",
    "stylelint": "^16.2.1",
    "stylelint-config-recommended-vue": "^1.5.0",
    "stylelint-config-standard-scss": "^13.1.0",
    "tsx": "^4.20.3",
    "typescript": "^5.9.2"
  },
  "keywords": [
    "jekyll",
    "profile",
    "developer",
    "portfolio"
  ],
  "author": "h-iwata",
  "license": "MIT",
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5"
  },
  "packageManager": "pnpm@10.14.0"
}
