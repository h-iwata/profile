# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

# HTML, Liquid テンプレート
[*.{html,liquid}]
indent_style = space
indent_size = 2

# YAML ファイル
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Ruby ファイル
[*.rb]
indent_style = space
indent_size = 2

# JavaScript, TypeScript
[*.{js,jsx,ts,tsx}]
indent_style = space
indent_size = 2

# CSS, SCSS, Sass
[*.{css,scss,sass}]
indent_style = space
indent_size = 2

# JSON ファイル
[*.json]
indent_style = space
indent_size = 2

# Markdown ファイル
[*.md]
trim_trailing_whitespace = false
indent_style = space
indent_size = 2

# Gemfile
[{Gemfile,Gemfile.lock}]
indent_style = space
indent_size = 2

# 設定ファイル
[.*rc]
indent_style = space
indent_size = 2